generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String          @id @default(cuid())
  firstName       String
  lastName        String
  email           String          @unique
  passwordHash    String
  role            Role            @default(USER)
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
}

enum Role {
  USER
  ADMIN
}

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model users {
  id              String          @id
  firstName       String
  lastName        String
  email           String          @unique
  passwordHash    String
  permissionLevel PermissionLevel @default(READER)
  createdAt       DateTime        @default(now())
  updatedAt       DateTime
}

enum PermissionLevel {
  READER
  WRITER
  EDITOR
}

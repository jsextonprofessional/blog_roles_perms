generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // Remove this line completely: url = env("DATABASE_URL")
}

enum PermissionLevel {
  READER
  WRITER
  EDITOR
}

model User {
  id              String           @id @default(uuid())
  firstName       String
  lastName        String
  email           String           @unique
  passwordHash    String
  permissionLevel PermissionLevel @default(READER)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  @@map("users")
}